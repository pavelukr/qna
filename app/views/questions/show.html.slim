h2= @question.title
div= @question.body
-if @question.answers.last != nil
  h2 Answers
  -@question.answers.each do |answer|
    table
      tr
        td
          = "#{ @question.answers.index(answer) + 1 }."
        td
          =answer.body
        - if user_signed_in?
          - if current_user == answer.user
            td
              = link_to 'Delete', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' }

= form_for [@question, @answer] do |f|
  table
    tr
      td
        = f.label :Enter_your_answer
    tr
      td
        = f.text_area :body
    tr
      td
        = f.submit 'Send'
p= link_to 'All questions', questions_path